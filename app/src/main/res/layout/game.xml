<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:gravity="center"
        android:id="@+id/background"

        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/speedup"
        android:background="@drawable/up"
        android:layout_above="@+id/speeddown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:alpha=".3"/>

    <Button
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:id="@+id/speeddown"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/down"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"

        android:alpha=".3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="distance"
        android:textSize="32dp"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_above="@+id/speed"
        android:layout_alignLeft="@+id/speedup"
        android:layout_alignStart="@+id/speedup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:id="@+id/distance"
        android:textSize="32dp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="speed"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:textSize="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/speed"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/distance"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <com.example.aleksejs.pangumobileapp.JoystickView
        android:id="@+id/joystickView"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:alpha=".3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="asteroid information here"
        android:id="@+id/textView3"
        android:textSize="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/distance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>